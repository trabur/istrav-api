{
   "compilerOptions": {
      "lib": [
         "es6",
         "DOM"
      ],
      "target": "ES6",
      "module": "commonjs",
      "isolatedModules": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules"]
 }